{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "composite": true,
    "paths": {
      "@base/*": [
        "./src/base/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@contexts/*": [
        "./src/contexts/*"
      ],
      "@dialog/*": [
        "./src/dialog/*"
      ],
      "@tree-tails/core/*": [
        "../core/src/*"
      ],
      "@tree-tails/core": [
        "../core/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}
