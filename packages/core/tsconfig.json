{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "composite": true,
    "paths": {
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@Dialog": ["src/Dialog"],
      "@Dialog/*": ["src/Dialog/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
