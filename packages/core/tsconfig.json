{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "paths": {
      "@base/*": ["./src/base/*"],
      "@contexts/*": ["./src/contexts/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
