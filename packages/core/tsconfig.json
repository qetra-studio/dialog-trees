{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "composite": true,
    "paths": {
      "@base/*": ["./src/base/*"],
      "@contexts": ["./src/contexts"],
      "@contexts/*": ["./src/contexts/*"],
      "@dialog": ["src/dialog"],
      "@dialog/*": ["src/dialog/*"],
      "@types": ["./src/types"],
      "@tails/*": ["./src/tails/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
